{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"module": "commonjs",
		"outDir": "./dist",
		"rootDirs": [
			"./src"
		],
		"strict": true,
		"lib": ["ES2019"],
		"target": "es2017",
		"skipLibCheck": true
	},
	"include": [
		"./src/**/*"
	]
}
